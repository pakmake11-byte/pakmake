'use client'

import { useRef, useEffect, useState } from 'react'
import { motion, useScroll, useTransform, useSpring, MotionValue } from 'framer-motion'

import { HeroSection } from '../components/home/HeroSection'
import { ProductIntro } from '../components/home/ProductIntro'
import { ComparisonSection } from '../components/home/ComparisonSection'
import { EnvironmentalImpact } from '../components/home/EnvironmentalImpact'
import { TechnicalDeepDive } from '../components/home/TechnicalDeepDive'
import { ProductVariants } from '../components/home/ProductVariants'
import { IndustriesServed } from '../components/home/IndustriesServed'
import { SocialProof } from '../components/home/SocialProof'
import { SlipSheetModel } from '../components/three/SlipSheetModel'

export default function Home() {
  const heroModelRef = useRef<HTMLDivElement>(null)
  const introModelRef = useRef<HTMLDivElement>(null)
  const containerRef = useRef<HTMLDivElement>(null)

  const [positions, setPositions] = useState({
    startTop: 0,
    startLeft: 0,
    startWidth: 0,
    startHeight: 0,
    endTop: 0,
    endLeft: 0,
    endWidth: 0,
    endHeight: 0,
  })

  const { scrollYProgress } = useScroll({
    target: containerRef,
    offset: ['start start', 'end end'],
  })

  // Smooth spring animation
  const smoothProgress = useSpring(scrollYProgress, {
    stiffness: 100,
    damping: 30,
    restDelta: 0.001,
  })

  useEffect(() => {
    const calculatePositions = () => {
      if (!heroModelRef.current || !introModelRef.current || !containerRef.current) return

      // Force a reflow to ensure all layouts are computed
      void heroModelRef.current.offsetHeight
      void introModelRef.current.offsetHeight

      const containerRect = containerRef.current.getBoundingClientRect()
      const heroRect = heroModelRef.current.getBoundingClientRect()
      const introRect = introModelRef.current.getBoundingClientRect()

      // Get current scroll position
      const scrollY = window.scrollY || window.pageYOffset

      // Calculate positions relative to the container's top-left corner in the document
      const containerTopInDocument = containerRect.top + scrollY
      const containerLeftInDocument = containerRect.left + window.scrollX

      const heroTopInDocument = heroRect.top + scrollY
      const heroLeftInDocument = heroRect.left + window.scrollX

      const introTopInDocument = introRect.top + scrollY
      const introLeftInDocument = introRect.left + window.scrollX

      
      const additionalDownOffset = 120;
      const additionalLeftOffset = 30;

      setPositions({
        startTop: heroTopInDocument - containerTopInDocument,
        startLeft: heroLeftInDocument - containerLeftInDocument,
        startWidth: heroRect.width,
        startHeight: heroRect.height,
        endTop: introTopInDocument - containerTopInDocument + additionalDownOffset,
        endLeft: introLeftInDocument - containerLeftInDocument - additionalLeftOffset,
        endWidth: introRect.width,
        endHeight: introRect.height,
      })
    }

    // Calculate immediately
    calculatePositions()

    // Recalculate after fonts and images load
    const timer1 = setTimeout(calculatePositions, 100)
    const timer2 = setTimeout(calculatePositions, 300)

    // Handle window resize with debouncing
    let resizeTimer: NodeJS.Timeout
    const handleResize = () => {
      clearTimeout(resizeTimer)
      resizeTimer = setTimeout(calculatePositions, 150)
    }

    window.addEventListener('resize', handleResize)
    window.addEventListener('load', calculatePositions)

    return () => {
      window.removeEventListener('resize', handleResize)
      window.removeEventListener('load', calculatePositions)
      clearTimeout(timer1)
      clearTimeout(timer2)
      clearTimeout(resizeTimer)
    }
  }, [])
  

  // Create transforms using smooth progress
  const top = useTransform(smoothProgress, [0, 1], [positions.startTop, positions.endTop])
  const left = useTransform(smoothProgress, [0, 1], [positions.startLeft, positions.endLeft])
  const width = useTransform(smoothProgress, [0, 1], [positions.startWidth, positions.endWidth])
  const height = useTransform(smoothProgress, [0, 1], [positions.startHeight, positions.endHeight])

  return (
    <div className="min-h-screen bg-gray-50">
      <div ref={containerRef} className="relative">
        {/* Only render when we have valid dimensions */}
        {positions.startWidth > 0 && positions.startHeight > 0 && (
          <motion.div
            className="absolute top-0 left-0 z-10 pointer-events-none"
            style={{
              top,
              left,
              width,
              height,
              willChange: 'transform, width, height',
            }}
          >
            <SlipSheetModel />
          </motion.div>
        )}

        <HeroSection ref={heroModelRef} />
        <ProductIntro ref={introModelRef} />
      </div>
      
      <ComparisonSection />
      <EnvironmentalImpact />
      <TechnicalDeepDive />
      <ProductVariants />
      <IndustriesServed />
      <SocialProof />
    </div>
  )
}